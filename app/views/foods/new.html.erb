<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= action_title "Cadastrar Novo Prato" %>
      </div>
      <div class="panel-body">
        <ul>
          <% @food.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>

<%= render 'form' %>

<%= link_to 'Back', foods_path %>

      </div> <!-- end panel-body -->
    </div> <!-- end panel panel-default -->
  </div> <!-- end col-md-6 -->
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2><small>Pratos Cadastrados</small></h2>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% @foods.each do |food| %>
            <%= link_to([food], :class => "list-group-item") do %>
              <h4 class="list-group-item-heading">
                <%= food.name %>
              </h4> <!-- end h4 -->
            <% end %> <!-- end link_to -->
          <% end %> <!-- end each -->
        </div> <!-- end list-group -->
      </div> <!-- end panel-body -->
    </div> <!-- end panel panel-default -->
  </div> <!-- end col-md-6 -->
</div> <!-- end row -->
