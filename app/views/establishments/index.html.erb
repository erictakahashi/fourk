<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= action_title "Estabelecimentos" %>
        <%= link_to "Novo estabelecimento", new_establishment_path, class: "btn btn-default" %>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% @establishments.each do |establishment| %>
            <%= link_to([establishment], :class => "list-group-item") do %>
              <h4 class="list-group-item-heading">
                <%= establishment.name %>
              </h4>

              <% establishment.categories.each do |category| %>
                <span class="label label-default">
                  <%= category.name %>
                </span>
              <% end %> <!-- end each -->
            <% end %> <!-- end link_to -->
          <% end %> <!-- end each -->
        </div> <!-- end list-group -->
      </div> <!-- end panel-body -->
    </div> <!-- end panel panel-default -->
  </div> <!-- end col-md-6 -->
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2><small>Pratos</small></h2>
        <%= link_to "Novo prato", new_food_path, class: "btn btn-default" %>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% @foods.each do |food| %>
            <%= link_to([food], :class => "list-group-item") do %>
              <h4 class="list-group-item-heading">
                <%= food.name %>
              </h4>

              <% food.categories.each do |category| %>
                <span class="label label-default">
                  <%= category.name %>
                </span>
              <% end %> <!-- end each -->
            <% end %> <!-- end link_to -->
          <% end %> <!-- end each -->
        </div> <!-- end list-group -->
      </div> <!-- end panel-body -->
    </div> <!-- end panel panel-default -->
  </div> <!-- end col-md-6 -->
</div> <!-- end row -->